{% extends "layouts/back-end/base.njk" %}

{% block title %}Journée portes ouvertes{% endblock %}

{% block main %}
<main class="max-w-3xl mx-auto py-8 space-y-6">
  <h1 class="text-2xl font-bold">Journée portes ouvertes</h1>

  <form method="post" action="/admin/open-day" class="space-y-4">
    <div>
      <label for="date" class="block mb-1 font-medium">Date de la JPO</label>
      <input
        type="date"
        id="date"
        name="date"
        class="border rounded px-3 py-2 w-full"
        value="{{ open_day.date }}"
        required
      >
    </div>

    <button
      type="submit"
      class="px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700"
    >
      Enregistrer
    </button>
  </form>
</main>
{% endblock %}
