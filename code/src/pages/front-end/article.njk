{% extends "layouts/front-end/base.njk" %}

{% block main %}
  <article class="max-w-3xl mx-auto my-8">

    {# Image de l'article #}
    <img
      class="w-full h-[300px] object-cover rounded-lg mb-6"
      src="{{ '/images/image-placeholder-article.png'
              if (not article.image or article.image|length == 0)
              else '/uploads/' ~ article.image }}"
      alt="{{ article.title }}"
    >

    {# Titre #}
    <h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>

    {# Auteur #}
    <p class="italic text-gray-600 mb-4">
      {% if article.author %}
        Par {{ article.author.name }}
      {% else %}
        La rÃ©daction
      {% endif %}
    </p>

    {# ðŸŸ¢ CHAPO (abstract) â€” texte court #}
    {% if article.abstract %}
      <p class="text-lg font-medium text-gray-800 mb-6">
        {{ article.abstract }}
      </p>
    {% endif %}

    {# ðŸŸ£ CONTENU COMPLET #}
    <div class="prose max-w-none">
      {{ article.content | safe }}
    </div>

  </article>
{% endblock %}
